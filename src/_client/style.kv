<LoginScreen>:
    Label:
        text: 'Login'
<KioskScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size: (800, 70)
            size_hint_y: 0.2
            Label:
                id: balance
                size_hint_x: 0.5
                text: 'Laden'
            Button:
                text: 'Abmelden'
                on_press: root.logout()
            Label:
                id: otp
                text: 'OTP\n12345'
                halign: 'right'
            Label:
                id: name
                text: 'Laden'
                halign: 'right'
            AsyncImage:
                id: avatar
                size_hint_x: 0.2
                source: root.blank
        ItemLayout:
            rows: 5
            cols: 4
            size: (800, 410)
<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: fields
            size: (800, 400)
            rows: 3
            cols: 2
            padding: 20
            spacing: 10
            Label:
                text: 'Vorname'
            DetailInput:
                id: firstname
                multiline: False
                font_size: 35
                focus: True
            Label:
                text: 'Nachname'
            DetailInput:
                id: lastname
                multiline: False
                font_size: 35
                focus: False
            Label:
                text: 'E-Mail'
            DetailInput:
                id: email
                multiline: False
                font_size: 30
                focus: False
        Keyboard:
            size: (800, 200)
