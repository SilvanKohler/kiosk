<LoginScreen>:
    Label:
        text: 'Login'
<KioskScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size: (800, 70)
            size_hint_y: 0.2
            Button:
                id: balance
                size_hint_x: 0.3
                text: 'Ausgaben: ' + str(root.get_balance()) + ' CHF'
            FloatLayout:
            AsyncImage:
                size_hint_x: 0.173
                source: root.get_avatar()
        ItemLayout:
            rows: 5
            cols: 4
            size: (800, 410)
            Button:
                text: 'Kaffee'
                on_press:
                    root.balance -= .5
                    root.ids['balance'].text = 'Ausgaben: ' + str(root.get_balance()) + ' CHF'
            Button:
                text: 'Cola'
                on_press:
                    root.balance -= 3
                    root.ids['balance'].text = 'Ausgaben: ' + str(root.get_balance()) + ' CHF'
<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: fields
            size: (800, 400)
            rows: 3
            cols: 2
            padding: 20
            spacing: 10
            Label:
                text: 'Vorname'
            DetailInput:
                id: firstname
                multiline: False
                font_size: 35
                focus: True
            Label:
                text: 'Nachname'
            DetailInput:
                id: lastname
                multiline: False
                font_size: 35
            Label:
                text: 'E-Mail'
            DetailInput:
                id: email
                multiline: False
                font_size: 30
        Keyboard:
            size: (800, 200)